<plugin>
    <groupId>org.openrewrite.maven</groupId>
    <artifactId>rewrite-maven-plugin</artifactId>
    <version>5.23.1</version>
    <configuration>
        <activeRecipes>
            <!--Disable the persistence unit second-level cache-->
            <recipe>org.openrewrite.java.migrate.JpaCacheProperties</recipe>
            <!--Do not use OpenJPA providers in the persistence.xml file-->
            <recipe>org.openrewrite.java.migrate.javaee7.OpenJPAPersistenceProvider</recipe>
        </activeRecipes>
    </configuration>
    <dependencies>
        <dependency>
            <groupId>org.openrewrite.recipe</groupId>
            <artifactId>rewrite-migrate-java</artifactId>
            <version>2.9.1</version>
        </dependency>
    </dependencies>
</plugin>
